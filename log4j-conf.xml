<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="TypeValueTestAppender"
            class="org.apache.log4j.RollingFileAppender">
      <param name="file" value="log/TypeValueTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%-5p %M: %m%n" />
	  </layout>
  </appender>
  
  <!-- de.ptb.epics.eve.data.measuringstation.* -->

  <appender name="AccessTestAppender" 
            class="org.apache.log4j.RollingFileAppender">
	  <param name="file" value="log/AccessTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%-5p %M: %m%n" />
	  </layout>
  </appender>

  <appender name="MeasuringStationTestAppender" 
            class="org.apache.log4j.RollingFileAppender">
	  <param name="file" value="log/MeasuringStationTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%-5p %M: %m%n" />
	  </layout>
  </appender>

  <appender name="OptionTestAppender" 
            class="org.apache.log4j.RollingFileAppender">
	  <param name="file" value="log/OptionTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%-5p %M: %m%n" />
	  </layout>
  </appender>


  <appender name="ExcludeFilterTestAppender" 
            class="org.apache.log4j.RollingFileAppender">
	  <param name="file" value="log/ExcludeFilterTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%-5p %M: %m%n" />
	  </layout>
  </appender>

  <appender name="ExcludeDevicesOfScanModuleFilterTestDailyAppender" 
            class="org.apache.log4j.RollingFileAppender">
	  <param name="file" value="log/ExcludeDevicesOfScanModuleFilterTest.log" />
	  <param name="Append" value="false" />
	  <param name="MaxFileSize" value="10MB"/>
      <param name="MaxBackupIndex" value="5"/>
	  <layout class="org.apache.log4j.PatternLayout">
		  <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c#%M: %m%n" />
	  </layout>
  </appender>

  <logger name="de.ptb.epics.eve.data.tests.TypeValueTest">
      <level value="DEBUG" />
      <appender-ref ref="TypeValueTestAppender" />
  </logger>

  <logger name="de.ptb.epics.eve.data.measuringstation.tests.AccessTest">
      <level value="DEBUG" />
      <appender-ref ref="AccessTestAppender" />
  </logger>

<logger name="de.ptb.epics.eve.data.measuringstation.tests.MeasuringStationTest">
      <level value="DEBUG" />
      <appender-ref ref="MeasuringStationTestAppender" />
  </logger>

  <logger name="de.ptb.epics.eve.data.measuringstation.tests.OptionTest">
      <level value="DEBUG" />
      <appender-ref ref="OptionTestAppender" />
  </logger>

  <logger name="de.ptb.epics.eve.data.measuringstation.filter.tests.ExcludeFilterTest">
	  <level value="DEBUG" />
	  <appender-ref ref="ExcludeFilterTestAppender" />
  </logger>
  
  <root>
	  <priority value="WARN" />
  </root>
  
</log4j:configuration>
