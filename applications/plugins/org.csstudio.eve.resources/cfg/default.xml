<?xml version="1.0" encoding="UTF-8"?>
<tns:scml xsi:schemaLocation="http://www.ptb.de/epics/SCML scml.xsd"
	xmlns:tns="http://www.ptb.de/epics/SCML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<location>DEFAULT</location>
	<version>2.3</version>
	<plugins>
		<plugin type="save">
			<name>ASCII</name>
			<location></location>
			<parameter name="format" datatype="string" default="ASCII"></parameter>
			<parameter name="suffix" datatype="string" default="txt"></parameter>
			<parameter name="extent" datatype="int" default="0"></parameter>
		</plugin>
		<plugin type="save">
			<name>HDF5</name>
			<location>/messung/eve/lib/linux-x86/libhdf5plugin.so</location>
			<parameter name="format" datatype="string" default="HDF5"></parameter>
			<parameter name="suffix" datatype="string" default="h5"></parameter>
			<parameter name="extent" datatype="int" default="0"></parameter>
		</plugin>
		<plugin type="save">
			<name>Do not save</name>
			<location>nosave</location>
		</plugin>
		<plugin type="position">
			<name>MotionDisabled</name>
			<location>/path/to/referenceadd</location>
		</plugin>
		<plugin type="position">
			<name>ReferenceAdd</name>
			<location>/path/to/referenceadd</location>
			<parameter name="summand" datatype="double" mandatory="true"></parameter>
			<parameter name="referenceaxis" datatype="axisid"
				mandatory="true"></parameter>
		</plugin>
		<plugin type="position">
			<name>ReferenceMultiply</name>
			<location>/path/to/referenceadd</location>
			<parameter name="factor" datatype="double" mandatory="true"></parameter>
			<parameter name="referenceaxis" datatype="axisid"
				mandatory="true"></parameter>
		</plugin>
		<plugin type="postscanpositioning">
			<name>PEAK</name>
			<location>/path/to/plugin3</location>
		</plugin>
		<plugin type="postscanpositioning">
			<name>CENTER</name>
			<location>/path/to/plugin3</location>
		</plugin>
		<plugin type="postscanpositioning">
			<name>MAX</name>
			<location>/path/to/plugin3</location>
		</plugin>
		<plugin type="postscanpositioning">
			<name>MIN</name>
			<location>/path/to/plugin3</location>
		</plugin>
		<plugin type="postscanpositioning">
			<name>EDGE</name>
			<location>/path/to/plugin3</location>
		</plugin>
	</plugins>
	<detectors>
		<detector>
			<class>Timer</class>
			<name></name>
			<id>detMsecTime</id>
			<channel>
				<class></class>
				<name>msec Time</name>
				<id>Timer1-det-int</id>
				<read>
					<access monitor="false" method="GETCB" transport="local"
						type="int">Timer</access>
				</read>
			</channel>
		</detector>
		<detector>
			<class>Timer</class>
			<name></name>
			<id>detDateTime</id>
			<channel>
				<class></class>
				<name>date Time</name>
				<id>Timer1-det-date</id>
				<read>
					<access monitor="false" method="GETCB" transport="local"
						type="datetime">Timer</access>
				</read>
			</channel>
		</detector>
		<detector>
			<class>EPICS</class>
			<name>excas</name>
			<id>eve:excasvalue</id>
			<channel>
				<class></class>
				<name>eveJane</name>
				<id>eve:janechan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:jane
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveFred</name>
				<id>eve:fredchan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:fred
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveJanet</name>
				<id>eve:janetchan1</id>
				<read>
					<access method="GETPUTCB" transport="ca" type="double">eve:janet
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveFreddy</name>
				<id>eve:freddychan1</id>
				<read>
					<access method="GETPUTCB" transport="ca" type="double">eve:freddy
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveAlan</name>
				<id>eve:alanchan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:alan
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveAlbert</name>
				<id>eve:albertchan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:albert
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveBill</name>
				<id>eve:billchan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:bill
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveBilly</name>
				<id>eve:billychan1</id>
				<read>
					<access method="GETPUTCB" transport="ca" type="double">eve:billy
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>eveBloaty</name>
				<id>eve:bloatychan1</id>
				<read>
					<access method="GETPUT" transport="ca" type="double">eve:bloaty
					</access>
				</read>
			</channel>
		</detector>
		<detector>
			<class>Data Sources</class>
			<name>System</name>
			<id>eve:sys</id>
			<channel>
				<class></class>
				<name>time</name>
				<id>sys:time</id>
				<read>
					<access method="GET" transport="ca" type="datetime">sys://time
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>free_mb</name>
				<id>sys:freeMb</id>
				<read>
					<access method="GET" transport="ca" type="double">sys://free_mb
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>used_mb</name>
				<id>sys:usedMb</id>
				<read>
					<access method="GET" transport="ca" type="double">sys://used_mb
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>max_mb</name>
				<id>sys:maxMb</id>
				<read>
					<access method="GET" transport="ca" type="double">sys://max_mb
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>user</name>
				<id>sys:user</id>
				<read>
					<access method="GET" transport="ca" type="string">sys://user
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>host</name>
				<id>sys:hostname</id>
				<read>
					<access method="GET" transport="ca" type="string">sys://host_name
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>qualified host</name>
				<id>sys:qualifiedHostName</id>
				<read>
					<access method="GET" transport="ca" type="string">sys://qualified_host_name
					</access>
				</read>
			</channel>
		</detector>
		<detector>
			<class>Data Sources</class>
			<name>Simulation</name>
			<id>eve:sim</id>
			<channel>
				<class></class>
				<name>Gaussian Noise</name>
				<id>sim:gaussianNoise</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://gaussianNoise
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>Gaussian Waveform</name>
				<id>sim:gaussianWaveform</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://gaussianWaveform
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>Sine Waveform</name>
				<id>sim:sineWaveform</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://sineWaveform
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>Square Waveform</name>
				<id>sim:squareWaveform</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://squareWaveform
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>Sawtooth Waveform</name>
				<id>sim:sawtoothWaveform</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://sawtoothWaveform
					</access>
				</read>
			</channel>
			<channel>
				<class></class>
				<name>Ramp</name>
				<id>sim:ramp</id>
				<read>
					<access method="GET" transport="ca" type="double">sim://ramp
					</access>
				</read>
			</channel>
		</detector>
	</detectors>
	<!-- motor section -->
	<motors>
		<motor>
			<class>Timer</class>
			<name></name>
			<id>motMsecTimer</id>
			<axis>
				<class></class>
				<name>msec Timer</name>
				<id>Timer1-mot-int</id>
				<goto>
					<access method="PUTCB" transport="local" type="int">Timer</access>
				</goto>
				<position>
					<access method="GETCB" transport="local" type="int">Timer</access>
				</position>
				<stop>
					<access method="PUT" transport="local" type="int">Timer</access>
					<value type="OnOff">0</value>
				</stop>
			</axis>
		</motor>
		<motor>
			<class>Timer</class>
			<name></name>
			<id>motDateTimer</id>
			<axis>
				<class></class>
				<name>date Timer</name>
				<id>Timer1-mot-date</id>
				<goto>
					<access method="PUTCB" transport="local" type="datetime">Timer</access>
				</goto>
				<position>
					<access method="GETCB" transport="local" type="datetime">Timer</access>
				</position>
				<stop>
					<access method="PUT" transport="local" type="int">Timer</access>
					<value type="OnOff">0</value>
				</stop>
			</axis>
		</motor>
		<!-- counter as motor -->
		<motor>
			<class>Counter</class>
			<name></name>
			<id>Counter1</id>
			<axis>
				<class></class>
				<name>Counter</name>
				<id>Counter</id>
				<goto>
					<access method="PUTCB" transport="local" type="int">Counter
					</access>
				</goto>
				<position>
					<access method="GETCB" transport="local" type="int">Counter
					</access>
				</position>
				<stop>
					<access method="PUT" transport="local" type="int">Counter</access>
					<value type="OnOff">0</value>
				</stop>
			</axis>
		</motor>
	</motors>
	<!-- device section -->
	<devices>
		<device>
			<class>EPICS</class>
			<name>eveBoot</name>
			<id>eve:bootdev</id>
			<value>
				<access method="GETPUT" transport="ca" type="OnOff">eve:boot</access>
				<value type="OnOff">On,Off</value>
			</value>
		</device>
		<device>
			<class>EPICS</class>
			<name>eveBooty</name>
			<id>eve:bootydev</id>
			<value>
				<access method="GETPUTCB" transport="ca" type="OnOff">eve:booty</access>
				<value type="OnOff">On,Off</value>
			</value>
		</device>
	</devices>
	<!-- smselection section and closing tag -->
	<smselection>
		<stepfunction>Add,Multiply,File,Plugin,Positionlist</stepfunction>
		<smtype>classic, advanced</smtype>
	</smselection>
</tns:scml>
