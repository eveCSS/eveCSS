<?xml version="1.0" encoding="UTF-8"?>
<tns:scml xsi:schemaLocation="http://www.ptb.de/epics/SCML scml.xsd"
    xmlns:tns="http://www.ptb.de/epics/SCML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <version>0.4.0</version>
    <repeatcount>0</repeatcount>
    <plugins>
        <plugin type="position">
            <name>plugin1</name>
            <location>/path/to/plugin1</location>
        </plugin>
        <plugin type="position">
            <name>ReferenceAdd</name>
            <location>/path/to/referenceadd</location>
            <parameter name="summand" datatype="double" default="0.0" mandatory="true"></parameter>
            <parameter name="referenceaxis" datatype="axisid" default="" mandatory="true"></parameter>
        </plugin>
        <plugin type="position">
            <name>ReferenceMultiply</name>
            <location>/path/to/referenceadd</location>
            <parameter name="factor" datatype="double" default="0.0" mandatory="true"></parameter>
            <parameter name="referenceaxis" datatype="axisid" default="" mandatory="true"></parameter>
        </plugin>
        <plugin type="position">
            <name>plugin2</name>
            <location>/path/to/plugin2</location>
        </plugin>
        <!-- (dummy) plugin to save data in ascii format -->
        <plugin type="save">
            <name>ASCII</name>
            <location></location>
            <parameter name="format" datatype="string" default="ASCII"></parameter>
            <parameter name="suffix" datatype="string" default="txt"></parameter>
        </plugin>
        <!-- plugin to save data in hdf5 format -->
        <plugin type="save">
            <name>HDF5</name>
            <location>/home/eden/eclipse/eve/evePlugins/lib/libhdf5plugin.so</location>
            <parameter name="extent" datatype="int" default="0"></parameter>
            <parameter name="format" datatype="string" default="HDF5"></parameter>
        </plugin>
        <plugin type="postscanpositioning">
            <name>GOTO-Peak</name>
            <location>/path/to/plugin3</location>
            <parameter name="direction" datatype="string"
                default="positive" mandatory="false">positive,negative</parameter>
        </plugin>
        <plugin type="postscanpositioning">
            <name>GOTO-Center</name>
            <location>/path/to/plugin3</location>
            <parameter name="direction" datatype="string"
                default="positive" mandatory="true">positive,negative</parameter>
        </plugin>
    </plugins>
    <detectors>
          <detector>
           <class>Timer</class>
            <name>Uhrzeit</name>
            <id>Timer02</id>
            <channel>
            	<class>none</class>
                <name>Wecker</name>
                <id>Timer02.03</id>
                <read>
                    <access method="GETCB" type="datetime" transport="local">Timer</access>
               </read>
            </channel>
         </detector>
         <detector>
           <class>Timer</class>
            <name>Timer03</name>
            <id>Timer03</id>
            <channel>
            	<class>none</class>
                <name>Timer0301</name>
                <id>Timer03.01</id>
                <read>
                    <access method="GETCB" type="int" transport="local">Timer</access>
               </read>
            </channel>
         </detector>
         <detector>
            <class>ringCurrent</class>
            <name>BESSY</name>
            <id>ringCurrent</id>
            <unit>
                <unitstring>Ampere</unitstring>
            </unit>
            <channel>
            	<class>any</class>
                <name>RingStrom</name>
                <id>ringCurrent1</id>
                <read>
                    <access method="GETCB" type="double" transport="ca">ringCurrent1</access>
                </read>
            </channel>
        </detector>
    </detectors>
    <motors>
        <motor>
            <class>Timer</class>
            <name>T1</name>
            <id>Timer01</id>
            <axis>
            	<class></class>
                <name>Wecker</name>
                <id>Timer01.01</id>
                <goto>
                    <access method="PUTCB" type="datetime" transport="local">Timer</access>
                </goto>
                <position>
                    <access method="GETCB" type="datetime" transport="local">Timer</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Timer</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
        <motor>
            <class>Timer</class>
            <name></name>
            <id>Timer02</id>
            <axis>
            	<class></class>
                <name>Wecker 2</name>
                <id>Timer02.01</id>
                <goto>
                    <access method="PUTCB" type="datetime" transport="local">Timer</access>
                </goto>
                <position>
                    <access method="GETCB" type="datetime" transport="local">Timer</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Timer</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
        <motor>
            <class>KlasseC1</class>
            <name>C1</name>
            <id>Counter01</id>
            <axis>
	            <class></class>
                <name></name>
                <id>Counter01.01</id>
                <goto>
                    <access method="PUTCB" type="int" transport="local">Counter</access>
                </goto>
                <position>
                    <access method="GETCB" type="int" transport="local">Counter</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Counter</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
        <motor>
            <class></class>
            <name></name>
            <id>Counter02</id>
            <axis>
	            <class></class>
                <name></name>
                <id>Counter02.01</id>
                <goto>
                    <access method="PUTCB" type="int" transport="local">Counter</access>
                </goto>
                <position>
                    <access method="GETCB" type="int" transport="local">Counter</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Counter</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
    </motors>
    <devices>
        <device>
            <class>SMC200</class>
            <name>Load Motor</name>
            <id>PPSMC:23715001.SET</id>
            <value>
                <access method="GETPUTCB" type="string" transport="ca">PPSMC:23715001.SET</access>
                <value type="string"></value>
            </value>
            <unit>
                <access method="GETCB" type="string" transport="ca">PPSMC:23715001.EGU</access>
            </unit>
        </device>
        <device>
            <class></class>
            <name>Motor-RBV</name>
            <id>Event-PPSMC:23715001</id>
            <value>
                <access method="GETCB" type="double" transport="ca">PPSMC:23715001.RBV</access>
                <value type="double"></value>
            </value>
        </device>
        <device>
            <class></class>
            <name>"Dummy-Topup[]"</name>
            <id>TOPUP:228</id>
            <value>
                <access method="GETCB" type="double" transport="ca" monitor="true">PPSMC:23715001.RBV</access>
                <value type="double"></value>
            </value>
        </device>
        <device>
            <class></class>
            <name>Dummy-Nr.2</name>
            <id>TOPUP:234</id>
            <value>
                <access method="GETCB" type="double" transport="ca" monitor="true">PPSMC:23715001.RBV</access>
                <value type="double"></value>
            </value>
        </device>
    </devices>
    <smselection>
        <stepfunction>Add,Multiply,File,Plugin,Positionlist</stepfunction>
        <smtype>classic, advanced</smtype>
    </smselection>
</tns:scml>
