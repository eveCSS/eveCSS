<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="de.ptb.epics.eve.viewer.EveEnginePerspective"
          id="EveEnginePerspective">
      </perspective>
      <perspective
            class="de.ptb.epics.eve.viewer.EveDevicePerspective"
            id="EveDevicePerspective"
            name="%perspective.name.0"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            icon="icons/css.gif"
            class="de.ptb.epics.eve.viewer.PlayListView"
            id="PlayListView">
      </view>
      <view
            name="%view.name.0"
            icon="icons/css.gif"
            class="de.ptb.epics.eve.viewer.GraphView"
            id="GraphView">
      </view>
      <view
            allowMultiple="true"
            class="de.ptb.epics.eve.viewer.MeasuringStationView"
            icon="icons/css.gif"
            id="MeasuringStationView"
            name="%view.name.1"
            restorable="true">
      </view>
      <view
            name="%view.name.2"
            icon="icons/css.gif"
            class="de.ptb.epics.eve.viewer.MessagesView"
            id="MessagesView">
      </view>
      <view
            class="de.ptb.epics.eve.viewer.DeviceInspectorViewer"
            icon="icons/css.gif"
            id="DeviceInspectorView"
            name="%view.name.3"/>
      <view
            allowMultiple="true"
            class="de.ptb.epics.eve.viewer.DeviceOptionsViewer"
            icon="icons/css.gif"
            id="DeviceOptionsView"
            name="%view.name.4"/>
      <view
            allowMultiple="true"
            class="de.ptb.epics.eve.viewer.PlotView"
            icon="icons/css.gif"
            id="PlotView"
            name="%view.name.5"/>
      <view
            allowMultiple="true"
            class="de.ptb.epics.eve.viewer.MeasuringStationView"
            icon="icons/css.gif"
            id="LocalDevicesView"
            name="%view.name.6"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="SamplePerspective">
         <view
               relative="View3"
               visible="true"
               relationship="stack"
               id="View4">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="de.ptb.epics.eve.viewer.engineControlActionSet"
            label="%actionSet.label"
            visible="false">
         <menu
               id="engineControlMenu"
               label="%menu.label">
            <separator name="engineControlGroup"/>
         </menu>
         <action
               class="de.ptb.epics.eve.viewer.actions.TriggerAction"
               icon="icons/trigger.gif"
               id="de.ptb.epics.eve.viewer.actions.TriggerAction"
               label="%action.label.4"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.4">
         </action>
         <action
               class="de.ptb.epics.eve.viewer.actions.KillAction"
               icon="icons/kill.gif"
               id="de.ptb.epics.eve.viewer.actions.KillAction"
               label="%action.label"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip"/>
         <action
               class="de.ptb.epics.eve.viewer.actions.HaltAction"
               icon="icons/halt.gif"
               id="de.ptb.epics.eve.viewer.actions.HaltAction"
               label="%action.label.8"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.8">
         </action>
         
        
         <action
               class="de.ptb.epics.eve.viewer.actions.SkipAction"
               icon="icons/skip.gif"
               id="de.ptb.epics.eve.viewer.actions.SkipAction"
               label="%action.label.0"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.0"/>
          <action
               class="de.ptb.epics.eve.viewer.actions.StopAction"
               icon="icons/stop.gif"
               id="de.ptb.epics.eve.viewer.StopAction"
               label="%action.label.1"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.1"/>
         <action
               class="de.ptb.epics.eve.viewer.actions.PauseAction"
               icon="icons/pause.gif"
               id="de.ptb.epics.eve.viewer.actions.PauseAction"
               label="%action.label.2"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.2"/>
         <action
               class="de.ptb.epics.eve.viewer.actions.PlayAction"
               icon="icons/play.gif"
               id="de.ptb.epics.eve.viewer.actions.PlayAction"
               label="%action.label.3"
               menubarPath="engineControlMenu/engineControlGroup"
               style="push"
               toolbarPath="engineControlGroup"
               tooltip="%action.tooltip.3"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Connect to Engine"
            id="de.ptb.epics.eve.viewer.connectCommand"
            name="connectCommand">
      </command>
      <command
            description="Disconnect from Engine"
            id="de.ptb.epics.eve.viewer.disconnectCommand"
            name="disconnect">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.ptb.epics.eve.viewer.actions.connectCommandHandler"
            commandId="de.ptb.epics.eve.viewer.connectCommand">
      </handler>
      <handler
            class="de.ptb.epics.eve.viewer.actions.disConnectCommandHandler"
            commandId="de.ptb.epics.eve.viewer.disconnectCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:GraphView">
         <command
               commandId="de.ptb.epics.eve.viewer.connectCommand"
               icon="icons/connect.gif"
               label="keins"
               style="push"
               tooltip="Connect to Engine">
         </command>
         <command
               commandId="de.ptb.epics.eve.viewer.disconnectCommand"
               helpContextId="Disconnect  Engine"
               icon="icons/disconnect.gif"
               label="keins"
               style="push"
               tooltip="Disconnect  Engine">
         </command>
      </menuContribution>
   </extension>

</plugin>
