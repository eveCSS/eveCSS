<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="git-archive" basedir="../../../../../"> 
	<!-- base dir is jenkins project root-->

	<description>
	</description>
	
	<property environment="env" />
	<property name="workspace" location="${env.WORKSPACE}" />
	
	<target name="git-archive">
		<delete dir="${workspace}/repoXML" />
		<exec executable="git" dir="${workspace}">
			<arg value="clone" />
			<arg value="-b" />
			<arg value="${use.branch}" />
			<arg value="/soft/repo/git/eveXML" />
			<arg value="repoXML" />
		</exec>
		<echo message="${use.branch}" />
		<exec executable="git" dir="${workspace}/repoXML/" failonerror="true">
			<arg value="archive" />
			<arg value="--format" />
			<arg value="zip" />
			<arg value="--output" />
			<arg value="${workspace}/bin/eveXML/xtmpl.zip" />
			<arg value="${use.branch}" />
		</exec>
	</target>
</project>