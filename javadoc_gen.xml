<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc" basedir="../"> <!-- base directory is eveCSS -->

  <description>
  	Ant File for Building JavaDoc...
  </description>

  <property name="eclipse_dir" location="${user.home}/eclipse_dir" />

  <target name="javadoc">
    <javadoc
      destdir="docs/api/eveCSS"
      access="public"
      author="true"
      version="true"
      use="true"
      windowtitle="eveCSS API">
   	
      <classpath>
    	<pathelement path="${classpath}"/>
    	<fileset dir="${eclipse_dir}/plugins">
    	  <include name="**/*.jar"/>
    	</fileset>
    	<pathelement location="org.csstudio.platform.libs.epics/lib/caj-1.1.5d.jar" />
    	<pathelement location="org.csstudio.platform.libs.epics/lib/jca-2.3.3.jar" />
    	<pathelement location="org.csstudio.platform.libs.dal/lib/java-common-4.0.1-SNAPSHOT.jar" />
    	<pathelement location="org.csstudio.platform/lib/jdom.jar" />
    	<pathelement location="org.csstudio.platform.libs.jms/libs/activemq-all-5.1.0.jar" />
    	<pathelement location="org.csstudio.platform/lib/log4j-1.2.14.jar" />
      </classpath>
	
      <packageset dir="de.ptb.epics.eve.data/src" defaultexcludes="yes" />
      <packageset dir="de.ptb.epics.eve.ecp1/src" defaultexcludes="yes" />
      <packageset dir="de.ptb.epics.eve.editor/src" defaultexcludes="yes" />
      <packageset dir="de.ptb.epics.eve.viewer/src" defaultexcludes="yes" />
      <packageset dir="de.ptb.epics.eve.preferences/src" defaultexcludes="yes" />

      <packageset dir="org.csstudio.apputil/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.apputil.ui/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.logbook/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.libs.dal/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.libs.dal.epics/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.libs.epics/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.libs.jmock/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.libs.jms/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.ui/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.utility.jms/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.platform.workspace/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.startup/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.startuphelper/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.swt.xygraph/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.utility.pv/src" defaultexcludes="yes" />
      <packageset dir="org.csstudio.utility.pv.epics/src" defaultexcludes="yes" />

      <doctitle><![CDATA[<h1>eveCSS</h1>]]></doctitle>
      <bottom>
        <![CDATA[<i>Copyright &#169; 2000 Dummy Corp. All Rights Reserved.</i>]]>
      </bottom>
       
      <tag name="precondition" scope="all" description="Precondition:"/>
      <tag name="postcondition" scope="all" description="Postcondition:"/>
      <tag name="uml.dependency" scope="all" enabled="false" />
      <tag name="uml.property" scope="all" enabled="false" />
      <tag name="uml.associationEnd" scope="all" enabled="false" />
	
      <group title="EVE Data Model" packages="de.ptb.epics.eve.data*"/>
      <group title="NMP &lt;-&gt; ECP" packages="de.ptb.epics.eve.ecp1*"/>
      <group title="EVE Editor" packages="de.ptb.epics.eve.editor*"/>
      <group title="EVE Viewer" packages="de.ptb.epics.eve.viewer*"/>
      
      <group title="CSS" packages="org.csstudio.*"/>
      
      <group title="apache" packages="org.apache.*" />
      
      <group title="SWT" packages="org.eclipse.swt.*" />
    
      <link offline="true" href="http://download.oracle.com/javase/6/docs/api" 
        packagelistLoc="docs/api/jdk-6u23/docs/api/"/> 
      <link offline="true" href="http://download.oracle.com/javaee/6/api" 
        packagelistLoc="docs/api/j2ee-6.0.1/" />
      <link offline="true" href="http://logging.apache.org/log4j/1.2/apidocs"
        packagelistLoc="docs/api/log4j/" />
      <link offline="true" href="http://www.eclipse.org/pde"
        packagelistLoc="docs/api/pde/" />
      <link offline="true" href="http://jca.cosylab.com/apidocs"
      	packagelistLoc="docs/api/jca-2.3.2/" />
    </javadoc>
  </target>
</project>