                <name>BasisScan</name>
                <xpos>131</xpos>
                <ypos>59</ypos>
                <parent>0</parent>
                <appended>2</appended>
                <settletime>3.0</settletime>
                <triggerdelay>0.0</triggerdelay>
                <triggerconfirm>false</triggerconfirm>
                <saveaxispositions>never</saveaxispositions>
                <smaxis>
                    <axisid>Counter01.01</axisid>
                    <stepfunction>File</stepfunction>
                    <positionmode>relative</positionmode>
                    <stepfilename>/home/scherr/eclipse/sme_v2/testfiles/034/kurz.list</stepfilename>
                </smaxis>
                <smaxis>
                    <axisid>Counter02.01</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="int">0</start>
                    <stop type="int">0</stop>
                    <stepwidth type="int">0</stepwidth>
                    <ismainaxis>false</ismainaxis>
                </smaxis>
                <smaxis>
                    <axisid>Timer01.01</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="datetime">00:00:00</start>
                    <stop type="datetime">00:00:00</stop>
                    <stepwidth type="datetime">00:00:00</stepwidth>
                    <ismainaxis>false</ismainaxis>
                </smaxis>
                <smaxis>
                    <axisid>Timer02.01</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="datetime">00:00:00</start>
                    <stop type="datetime">00:00:00</stop>
                    <stepwidth type="datetime">00:00:00</stepwidth>
                    <ismainaxis>false</ismainaxis>
                </smaxis>
                <smchannel>
                    <channelid>ringCurrent1</channelid>
                    <averagecount>1</averagecount>
                    <maxattempts>0</maxattempts>
                    <confirmtrigger>false</confirmtrigger>
                </smchannel>
                <smchannel>
                    <channelid>P5000:2370700.1</channelid>
                    <averagecount>0</averagecount>
                    <maxattempts>0</maxattempts>
                    <confirmtrigger>false</confirmtrigger>
