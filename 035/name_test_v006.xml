        <motor>
            <class>KlasseC1</class>
            <name>C1</name>
            <id>Counter01</id>
            <axis>
                <name></name>
                <id>Counter01.01</id>
                <goto>
                    <access method="PUTCB" type="int" transport="local">Counter</access>
                </goto>
                <position>
                    <access method="GETCB" type="int" transport="local">Counter</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Counter</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
        <motor>
            <class></class>
            <name></name>
            <id>Counter02</id>
            <axis>
                <name></name>
                <id>Counter02.01</id>
                <goto>
                    <access method="PUTCB" type="int" transport="local">Counter</access>
                </goto>
                <position>
                    <access method="GETCB" type="int" transport="local">Counter</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Counter</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
    </motors>
    <devices>
        <device>
            <class>SMC200</class>
            <name>Load Motor</name>
            <id>PPSMC:23715001.SET</id>
