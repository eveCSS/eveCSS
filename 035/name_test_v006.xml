                <smchannel>
                    <channelid>K0617:22225.2</channelid>
                    <averagecount>0</averagecount>
                    <maxattempts>0</maxattempts>
                    <confirmtrigger>false</confirmtrigger>
                </smchannel>
                <smchannel>
                    <channelid>K0617:22225.1</channelid>
                    <averagecount>0</averagecount>
                    <maxattempts>0</maxattempts>
                    <confirmtrigger>false</confirmtrigger>
                </smchannel>
            </scanmodule>
            <scanmodule id="2">
                <type>classic</type>
                <name>Zweites Scan Modul</name>
                <xpos>259</xpos>
                <ypos>58</ypos>
                <parent>1</parent>
                <triggerconfirm>false</triggerconfirm>
                <saveaxispositions>never</saveaxispositions>
                <smaxis>
                    <axisid>Counter02.01</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="int">0</start>
                    <stop type="int">0</stop>
                    <stepwidth type="int">0</stepwidth>
                    <ismainaxis>false</ismainaxis>
                </smaxis>
            </scanmodule>
        </scanmodules>
    </chain>
    <plugins>
        <plugin type="position">
            <name>plugin1</name>
            <location>/path/to/plugin1</location>
        </plugin>
        <plugin type="position">
            <name>plugin2</name>
            <location>/path/to/plugin2</location>
        </plugin>
        <plugin type="save">
            <name>HDFspezial</name>
            <location>HDFspezial.slib</location>
        </plugin>
    </plugins>
    <detectors>
        <detector>
            <class>ringCurrent</class>
            <name>BESSY</name>
            <id>ringCurrent</id>
            <unit>
                <unitstring>Ampere</unitstring>
            </unit>
            <channel>
                <name>RingStrom</name>
                <id>ringCurrent1</id>
                <read>
                    <access method="GETCB" type="double" transport="ca">ringCurrent1</access>
                </read>
            </channel>
        </detector>
        <detector>
            <class>Keithley617</class>
            <name></name>
            <id>K0617:22225</id>
            <unit>
                <access method="GETCB" type="string" transport="ca">K0617:22225.EGU</access>
            </unit>
            <trigger>
                <access method="PUTCB" type="int" transport="ca">K0617:22225.TRIG</access>
                <value type="int">1</value>
            </trigger>
            <channel>
                <name>Kanal 1</name>
                <id>K0617:22225.1</id>
                <read>
                    <access method="GETCB" type="double" transport="ca">K0617:22225.VAL</access>
                </read>
            </channel>
            <channel>
                <name></name>
                <id>K0617:22225.2</id>
                <read>
                    <access method="GETCB" type="double" transport="ca">K0617:22225.VAL</access>
                </read>
            </channel>
            <option>
                <name>ZeroCheck</name>
                <id>K6559:22225zeroChk</id>
                <value>
                    <access method="GETPUTCB" type="OnOff" transport="ca">K6559:22225zeroChk</access>
                    <value type="OnOff">1, 0</value>
                </value>
                <displaygroup>detail</displaygroup>
            </option>
            <option>
                <name>Function</name>
                <id>K6559:22225function</id>
                <value>
                    <access method="GETPUTCB" type="string" transport="ca">K6559:22225function</access>
                    <value type="string">Voltage, Current, Resistance</value>
                </value>
                <displaygroup>summary</displaygroup>
            </option>
        </detector>
        <detector>
            <class>Prema5000</class>
            <name>Prema</name>
            <id>23707</id>
            <unit>
                <access method="GETCB" type="double" transport="ca">P5000:2370700.EGU</access>
            </unit>
            <trigger>
                <access method="PUTCB" type="double" transport="ca">P5000:2370700.TRIG</access>
                <value type="int">1</value>
            </trigger>
            <channel>
                <name></name>
                <id>P5000:2370700.1</id>
                <read>
                    <access method="GETCB" type="double" transport="ca">P5000:2370700.VAL</access>
                </read>
            </channel>
            <option>
                <name>Function</name>
                <id>P5000:23707function</id>
                <value>
                    <access method="GETPUTCB" type="string" transport="ca">P5000:23707function</access>
                    <value type="string">DCVolts,  ACVolts,  DCAmps,  ACAmps,  Ohms</value>
                </value>
                <displaygroup>summary</displaygroup>
            </option>
            <option>
                <name>Range</name>
                <id>P5000:23707range</id>
                <value>
                    <access method="GETPUTCB" type="string" transport="ca">P5000:23707range</access>
                    <value type="string">"Auto On", "0.2 -&gt; V kO", "2 -&gt; V mA kO", "20 -&gt; V kO", "200 -&gt; V kO", "2 -&gt; A MO", "12 -&gt; MO", "Auto Off"</value>
                </value>
                <displaygroup>summary</displaygroup>
            </option>
        </detector>
    </detectors>
    <motors>
        <motor>
            <class>Timer</class>
            <name>T1</name>
            <id>Timer01</id>
            <axis>
                <name>Wecker</name>
                <id>Timer01.01</id>
                <goto>
                    <access method="PUTCB" type="datetime" transport="local">Timer</access>
                </goto>
                <position>
                    <access method="GETCB" type="datetime" transport="local">Timer</access>
                </position>
                <stop>
                    <access method="PUT" type="int" transport="local">Timer</access>
                    <value type="OnOff">0</value>
                </stop>
            </axis>
        </motor>
        <motor>
            <class>Timer</class>
            <name></name>
            <id>Timer02</id>
            <axis>
                <name>Wecker 2</name>
                <id>Timer02.01</id>
                <goto>
                    <access method="PUTCB" type="datetime" transport="local">Timer</access>
