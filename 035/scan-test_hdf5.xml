<?xml version="1.0" encoding="UTF-8"?>
<tns:scml xsi:schemaLocation="http://www.ptb.de/epics/SCML scml.xsd"
    xmlns:tns="http://www.ptb.de/epics/SCML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <version>0.3.5</version>
    <chain id="1">
        <comment>1 axis, 1 detector, start/stop/step, add</comment>
        <savefilename>Dateiname.hd5</savefilename>
        <saveformat>HDF5</saveformat>
        <confirmsave>false</confirmsave>
        <autonumber>true</autonumber>
        <saveplugin name="HDF5">
        	<parameter name="location">/home/eden/eclipse/eve/evePlugins/lib/libhdf5plugin.so</parameter>
            <parameter name="extent">55</parameter>
        </saveplugin>        
        <savescandescription>true</savescandescription>
        <scanmodules>
            <scanmodule id="1">
                <type>classic</type>
                <name>BasisScan</name>
                <xpos>260</xpos>
                <ypos>70</ypos>
                <parent>0</parent>
                <nested>3</nested>
                <appended>2</appended>
                <settletime>3.0</settletime>
                <triggerdelay>0.0</triggerdelay>
                <triggerconfirm>false</triggerconfirm>
                <prescan>
                    <id>PPSMC:23715001.SET</id>
                    <value type="string">Use</value>
                </prescan>
                <smaxis>
                    <axisid>PPSMC:23715000</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="double">1.0</start>
                    <stop type="double">10.0</stop>
                    <stepwidth type="double">2.0</stepwidth>
                </smaxis>
                <smchannel>
                    <channelid>ringCurrent1</channelid>
                    <averagecount>1</averagecount>
                </smchannel>
                <postscan>
                    <id>PPSMC:23715001.SET</id>
                    <reset_originalvalue>true</reset_originalvalue>
                </postscan>
                <plot id="1">
                    <xaxis>
                        <id>PPSMC:23715000</id>
                        <mode>linear</mode>
                    </xaxis>
                    <init>false</init>
                    <yaxis>
                        <id>K6559:2222502</id>
                        <mode>linear</mode>
                        <linestyle>solid</linestyle>
                        <color>blue</color>
                        <markstyle>star</markstyle>
                    </yaxis>
                </plot>
            </scanmodule>
            <scanmodule id="3">
                <type>classic</type>
                <name>NestedScan</name>
                <xpos>260</xpos>
                <ypos>70</ypos>
                <parent>1</parent>
                <settletime>3.0</settletime>
                <triggerdelay>0.0</triggerdelay>
                <triggerconfirm>false</triggerconfirm>
                <smaxis>
                    <axisid>PPSMC:23715001</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="double">1.5</start>
                    <stop type="double">10.5</stop>
                    <stepwidth type="double">2.0</stepwidth>
                </smaxis>
                <smchannel>
                    <channelid>ringCurrent1</channelid>
                    <averagecount>1</averagecount>
                </smchannel>
            </scanmodule>
            <scanmodule id="2">
                <type>classic</type>
                <name>AppendScan</name>
                <xpos>260</xpos>
                <ypos>70</ypos>
                <parent>1</parent>
                <settletime>3.0</settletime>
                <triggerdelay>0.0</triggerdelay>
                <triggerconfirm>false</triggerconfirm>
                <prescan>
                    <id>PPSMC:23715001.SET</id>
                    <value type="string">Use</value>
                </prescan>
                <smaxis>
                    <axisid>PPSMC:23715000</axisid>
                    <stepfunction>Add</stepfunction>
                    <positionmode>absolute</positionmode>
                    <start type="double">3.0</start>
                    <stop type="double">6.0</stop>
                    <stepwidth type="double">0.5</stepwidth>
                </smaxis>
                <smchannel>
                    <channelid>ringCurrent1</channelid>
                    <averagecount>1</averagecount>
                </smchannel>
                <postscan>
                    <id>PPSMC:23715001.SET</id>
                    <reset_originalvalue>true</reset_originalvalue>
                </postscan>
                <plot id="1">
                    <xaxis>
                        <id>PPSMC:23715000</id>
                        <mode>linear</mode>
                    </xaxis>
                    <init>false</init>
                    <yaxis>
                        <id>K6559:2222502</id>
                        <mode>linear</mode>
                        <linestyle>solid</linestyle>
                        <color>blue</color>
                        <markstyle>star</markstyle>
                    </yaxis>
                </plot>
            </scanmodule>
        </scanmodules>
    </chain>
    <plugins>
        <plugin type="position">
            <name>plugin1</name>
            <location>/path/to/plugin1</location>
        </plugin>
        <plugin type="position">
            <name>plugin2</name>
            <location>/path/to/plugin2</location>
        </plugin>
        <plugin type="save">
            <name>HDFspezial</name>
            <location>HDFspezial.slib</location>
        </plugin>
    </plugins>
    <detectors>
        <detector>
            <class>ringCurrent</class>
            <name>BESSYRingStrom</name>
            <id>ringCurrent</id>
            <unit>
            	<unitstring>Ampere</unitstring>
            </unit>
            <channel>
                <name>RingStrom</name>
                <id>ringCurrent1</id>
                <read>
                	<access method="GETCB" transport="ca">ringCurrent1</access>
                </read>
            </channel>
        </detector>
        <detector>
            <class>Keithley617</class>
            <name>Keithley 617</name>
            <id>K0617:22225</id>
            <unit>
                	<access method="GETCB" transport="ca">K0617:22225.EGU</access>
            </unit>
            <trigger>
                <access method="PUTCB" transport="ca">K0617:22225.TRIG</access>
                <value type="int">1</value>
            </trigger>
            <channel>
                <name>Kanal 1</name>
                <id>K0617:22225.1</id>
                <read>
                	<access method="GETCB" transport="ca">K0617:22225.VAL</access>
                </read>
            </channel>
            <option>
                <name>ZeroCheck</name>
                <id>K6559:22225zeroChk</id>
                <value>
                    <access  method="GETPUTCB" transport="ca">K6559:22225zeroChk</access>
                 	<value type="OnOff">1,0</value>
                </value>
                <displaygroup>detail</displaygroup>
            </option>
            <option>
                <name>Function</name>
                <id>K6559:22225function</id>
                <value>
                    <access  method="GETPUTCB" transport="ca">K6559:22225function</access>
                	<value type="string">Voltage,Current,Resistance</value>
                </value>
                <displaygroup>summary</displaygroup>
            </option>
        </detector>
    </detectors>
    <motors>
        <motor>
            <class>PPSMC</class>
            <name>TestMotor</name>
            <id>PPSMC:23715</id>
            <unit>
                <access method="GETCB" transport="ca">PPSMC:23715000.EGU</access>
            </unit>
            <axis>
                <name>X-Position</name>
                <id>PPSMC:23715000</id>
                <goto>
                    <access method="GETPUTCB" transport="ca" type="double" timeout="100.0">PPSMC:23715000</access>
                    <value type="double">10.0,12.0,13.1</value>
                </goto>
                <position>
                	<access method="GETCB" transport="ca" type="double">PPSMC:23715000.RBV</access>
                </position>
                <stop>
                    <access method="PUT" transport="ca" type="int">PPSMC:23715000.STOP</access>
                    <value type="int">1</value>
                </stop>
                <status>
                	<access method="GETCB" transport="ca" type="int">PPSMC:23715000.MSTA</access>
                </status>
                <deadband>
                	<access method="GETCB" transport="ca" type="double">PPSMC:23715000.RDBD</access>
                </deadband>
                <option>
                    <name>Velocity</name>
                    <id>PPSMC:23715000.VELO</id>
                    <value>
                    	<access  method="GETPUTCB" type="double" transport="ca">PPSMC:23715000.VELO</access>
                	</value>
                    <displaygroup>summary</displaygroup>
                </option>
        	    <option>
            	    <name>Lock Local</name>
               		<id>PPSMC:23715dislocal</id>
                	<value>
                    	<access method="GETPUTCB" type="string" transport="ca">PPSMC:23715dislocal</access>
	                	<value type="string">Enable,Disable</value>
                    </value>
            	</option>
            </axis>
            <axis>
                <name>Y-Position</name>
                <id>PPSMC:23715001</id>
                <goto>
                    <access method="PUTCB" transport="ca" type="double" timeout="100.0">PPSMC:23715001</access>
                    <value type="double">10.0,12.0,13.1</value>
                </goto>
                <position>
                	<access method="GETCB" transport="ca" type="double">PPSMC:23715001.RBV</access>
                </position>
                <stop>
                    <access method="PUTCB" transport="ca">PPSMC:23715001.STOP</access>
                    <value type="int">1</value>
                </stop>
                <status>
                	<access method="GETCB" transport="ca" type="int">PPSMC:23715001.MSTA</access>
                </status>
                <option>
                    <name>Velocity</name>
                    <id>PPSMC:23715001.VELO</id>
                    <value>
                    	<access  method="GETPUTCB" type="double" transport="ca">PPSMC:23715001.VELO</access>
                	</value>
                    <displaygroup>summary</displaygroup>
                </option>
            </axis>
        </motor>
    </motors>
    <devices>
        <device>
            <class>SMC200</class>
            <name>Load Motor</name>
            <id>PPSMC:23715001.SET</id>
            <value>
            	<access type="string" method="GETPUTCB" transport="ca">PPSMC:23715001.SET</access>
            	<value type="string"></value>
            </value>
            <unit>
                <access type="string" method="GETCB" transport="ca">PPSMC:23715001.EGU</access>
            </unit>
        </device>
    </devices>
</tns:scml>
